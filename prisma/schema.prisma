// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  username     String   @unique
  email        String   @unique
  avatar       String
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  post Post[] @relation("UserAuthorPost")

  likedIds  String[] @db.ObjectId
  // likedPost Post[]   @relation(fields: [likedIds], references: [id])
}

model Post {
  id      String @id @default(auto()) @map("_id") @db.ObjectId

  title   String
  content String

  author   User   @relation("UserAuthorPost", fields: [authorId], references: [id])
  authorId String

  // likedIDs String[] @db.ObjectId
  // likedBy  User[]   @relation(fields: [likedIDs], references: [id])
}
